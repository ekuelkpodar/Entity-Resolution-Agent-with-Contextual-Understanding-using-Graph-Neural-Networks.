# Application Configuration
APP_NAME=entity-resolution-agent
APP_ENV=development
LOG_LEVEL=INFO

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=entity_resolution

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=86400

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=4000

# Vector Database (choose one)
# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=entity-embeddings

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma

# MongoDB (for document storage)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=entity_resolution

# PostgreSQL (for structured data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=entity_resolution
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# GNN Model Configuration
GNN_HIDDEN_DIM=256
GNN_EMBEDDING_DIM=128
GNN_NUM_LAYERS=3
GNN_DROPOUT=0.2
GNN_LEARNING_RATE=0.001
GNN_BATCH_SIZE=32
GNN_NUM_EPOCHS=100

# Entity Resolution Thresholds
DEFINITE_MATCH_THRESHOLD=0.85
PROBABLE_MATCH_THRESHOLD=0.70
POSSIBLE_MATCH_THRESHOLD=0.50

# Signal Fusion Weights
WEIGHT_NAME_SIMILARITY=0.25
WEIGHT_ADDRESS_SIMILARITY=0.15
WEIGHT_IDENTIFIER_MATCH=0.20
WEIGHT_GNN_EMBEDDING=0.25
WEIGHT_SHARED_DIRECTORS=0.05
WEIGHT_SHARED_ADDRESSES=0.05
WEIGHT_LLM_CONFIDENCE=0.05

# Beneficial Ownership Configuration
UBO_OWNERSHIP_THRESHOLD=25.0
UBO_MAX_DEPTH=10
NOMINEE_RELATIONSHIP_THRESHOLD=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Feature Flags
ENABLE_GNN_MATCHING=true
ENABLE_LLM_REASONING=true
ENABLE_CACHING=true
ENABLE_ASYNC_PROCESSING=true

# Data Sources
COMPANIES_HOUSE_API_KEY=your_companies_house_key
SEC_EDGAR_USER_AGENT=your_email@example.com
OFAC_DATA_URL=https://www.treasury.gov/ofac/downloads/sdn.xml

# Spark Configuration (for large-scale processing)
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g
